<% if flash[:user_error] %>
    <% flash[:user_error].each do |error| %>
        <li><%= error %></li>
    <% end %>
<% end %>

<%= form_for @user do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.submit %>
<% end %>