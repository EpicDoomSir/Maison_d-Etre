<div class="error">
    <% if flash[:error] %>
        <p><%= flash[:error] %></p>
    <% end %>
</div>

    <div class="login-form-container">

            <%= form_for :session, url: login_path do |f| %>
                <%= f.label :username %>
                <%= f.text_field :username %>

                <%= f.label :password %>
                <%= f.password_field :password %><br><br>

                <%= f.submit "Enter" %>
            <% end %>

    </div>